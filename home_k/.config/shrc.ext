#######################################################################
#                                 svn                                 #
#######################################################################

svna() {
    while read _f ; do
        [[ -n "$_f" ]] && svn add $_f
    done <<< `svn status | grep '?' | awk '{print $2}'`
    while read _f ; do
        [[ -n "$_f" ]] && svn delete $_f
    done <<< `svn st | grep '^!' | awk '{print $2}'`
}

